<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">

      <form action="<%= movies_path %>" class="d-flex my-5" method="get">
        <input type="text" name="query" placeholder="Search something" class="flex-grow-1 mr-2 form-control">
        <input type="submit" value="Chercher">
      </form>

      <div id="movies">
        <% @movies.each do |movie| %>
          <h4><%= movie.title %></h4>
          <p><%= movie.syllabus %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
